  width: 100%;
  border-radius: 10px;
}

.product button {
  background: #ff6f61;
  color: #fff;
  border: none;
  padding: 10px;
  margin-top: 10px;
  width: 100%;
  cursor: pointer;
}
fetch("products.json")
  .then(res => res.json())
  .then(data => {
    let container = document.querySelector(".product-container");
    data.forEach(item => {
      container.innerHTML += `
        <div class="product">
          <img src="images/${item.img}" alt="${item.name}">
          <h3>${item.name}</h3>
          <p>${item.price} BDT</p>
          <button>Add to Cart</button>
        </div>
      `;
    });
  });
